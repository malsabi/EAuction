<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_broken_image"
                android:layout_marginBottom="8dp"
                android:id="@+id/cvLandmarkImg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Name"
                android:id="@+id/cvLandmarkName"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: Type"
                android:id="@+id/cvLandmarkType"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Location"
                android:id="@+id/cvLandmarkLocation"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area: Area"
                android:id="@+id/cvLandmarkArea"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details: Details"
                android:id="@+id/cvLandmarkDetails"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>