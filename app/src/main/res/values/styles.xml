        <item name="colorControlNormal">@color/PrimaryPeachyColor</item>
        <item name="colorControlActivated">@color/PrimaryPeachyColor</item>
        <item name="colorPrimary">@color/PrimaryPeachyColor</item> // Activated State
        <item name="colorOnSurface">@color/PrimaryPeachyColor</item> // Normal State
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
